<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZooSeeker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_matcha</item>
        <item name="colorPrimaryVariant">@color/matcha</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky</item>
        <item name="colorSecondaryVariant">@color/dark_sky</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/open_sans</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/black_matcha</item>
    </style>
    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/roboto_serif_italic</item>
    </style>
</resources>